{
  "name": "@sick-davinci/collage",
  "version": "0.2.0",
  "description": "A library to handle communication between micro frontends and enable an easy to use orchestration",
  "repository": "https://gitlab.sick.com/davinci/libraries/collage.git",
  "author": "Wanja Tschuor <wanja.tschuor@sick>",
  "contributors": [
    "Susanne Kirchner <susanne.kirchner@sick.de>",
    "Joshua Hagedorn <ravens.aerie@googlemail.com"
  ],
  "license": "MIT",
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "./dist/collage.umd.js",
  "module": "./dist/collage.es.js",
  "exports": {
    ".": {
      "import": "./dist/collage.es.js",
      "require": "./dist/collage.umd.js"
    }
  },
  "scripts": {
    "start:dev": "vite",
    "start:doc": "DEVELOP=true vuepress-vite dev ./docs -c ./docs/vuepress-config.js -p 8090",
    "start": "run-p start:*",
    "build": "tsc && vite build",
    "build:doc": "vuepress-vite build ./docs -c ./docs/vuepress-config.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint ./src --ext js,ts",
    "lint:fix": "eslint ./src --ext js,ts --fix"
  },
  "keywords": [],
  "dependencies": {
    "penpal": "^6.2.1",
    "rxjs": "^7.5.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "eslint": "^8.8.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.4",
    "jest": "^27.4.7",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4",
    "vite": "^2.7.2",
    "vuepress-vite": "^2.0.0-beta.27"
  }
}
