{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2019",
    "sourceMap": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "dom.iterable",
      "es2015.core",
      "es2015.collection",
      "es2015.promise",
      "es2015.reflect",
      "es2015",
      "es2016",
      "es2017",
      "es2019",
      "es2020",
      "es2021",
      "esnext.asynciterable"
    ],
    "paths": {
      "src/*": [
        "src/*"
      ]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveSymlinks": true,
    "baseUrl": "./"
  },
  "include": [
    "src/**/*.ts",
    "src/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
